@model BlogSiteProject.Models.ViewModels.KullaniciMakaleVM

@{
    ViewData["Title"] = "MakaleDetaylari";
}

<div class="container mt-5">
    <h1>Makale Detaylari</h1>
    <hr />

    <div>
        <h5>Makale Yazarı</h5>
        <dl class="row">
            <dt class="col-sm-2">
                <partial>@Model.Kullanici.FirstName @Model.Kullanici.LastName</partial>
            </dt>
        </dl>
    </div>
    <hr />

    @foreach (var makale in Model.Makaleler)
    {
        <dl class="row">
            <dt class="col-sm-2">
                Başlık
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => makale.Title)
            </dd>
            <dt class="col-sm-2">
                İçerik
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => makale.Content)
            </dd>
            <dt class="col-sm-2">
                İşlemler
            </dt>
            <dd class="col-sm-10">
                <a asp-controller="Makale" asp-action="MakaleDuzenle" asp-route-id="@makale.MakaleID">Düzenle</a> |
                <a asp-controller="Makale" asp-action="MakaleSil" asp-route-id="@makale.MakaleID">Sil</a>
            </dd>
        </dl>

        <hr />
        <br />
    }
    <div>
        <a asp-action="Index">Listeye Geri Dön</a>
    </div>
</div>


