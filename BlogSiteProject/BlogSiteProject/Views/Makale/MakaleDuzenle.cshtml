@model BlogSiteProject.Models.Makale

@{
    ViewData["Title"] = "Makale Duzenle";
}

<div class="container">
    <h1>Makale Duzenle</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="MakaleDuzenle" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MakaleID" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Makale Başlığı</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Makale İçeriği</label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="KullaniciID" class="control-label"></label>
                    <select asp-for="KullaniciID" class="form-control" asp-items="ViewBag.KullaniciID"></select>
                    <span asp-validation-for="KullaniciID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Listeye Geri Dön</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
