@model BlogSiteProject.Models.Makale

@{
    ViewData["Title"] = "Makale Ekle";
}

<h1 class="m-5">Makale Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-4 m-5">
        <form asp-action="MakaleEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Başlık</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">İçerik</label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KullaniciID" class="control-label">Kullanici ID</label>
                <input asp-for="KullaniciID" class="form-control" />
                <span asp-validation-for="KullaniciID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Makale Ekle" class="btn btn-success" />
            </div>
            <div>
                @*<a asp-action="Edit" asp-route-id="@Model.">Edit</a> |*@
                @*<a asp-action="MakaleDetaylari" asp-route-id="@Model.MakaleID">Details</a> |*@
                @*<a asp-action="KullaniciSil" asp-route-id="@item.ID">Delete</a>*@
            </div>
        </form>
    </div>
</div>

<div class="m-5">
    <a asp-action="Index" style="text-decoration:none;">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
